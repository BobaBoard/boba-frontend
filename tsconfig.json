{
  "compilerOptions": {
    "outDir": "dist/",
    "baseUrl": ".",
    "module": "esnext",
    "target": "es5",
    "lib": ["es5", "es6", "es7", "es2017", "dom", "es2019"],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "preserve",
    "moduleResolution": "node",
    "rootDirs": ["."],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "types": [
      "react",
      "react-dom",
      "styled-jsx",
      "node",
      "jest",
      "@testing-library/jest-dom"
    ],
    "paths": {
      "queries/*": ["src/queries/*"],
      "cache/*": ["src/lib/api/cache/*"],
      "components/*": ["src/components/*"],
      "utils/*": ["src/utils/*"],
      "pages/*": ["src/pages/*"],
      "types/*": ["types/*"],
      "contexts/*": ["src/contexts/*"],
      "lib/*": ["src/lib/*"]
    },
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["/**/*", "additional.d.ts"],
  "exclude": ["node_modules", "build", "scripts", "dist"]
}
